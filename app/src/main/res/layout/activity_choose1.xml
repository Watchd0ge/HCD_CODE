<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="서비스 요구사항"
        android:id="@+id/textView22"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="* 기간"
            android:id="@+id/textView23"
            android:layout_marginLeft="59dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장기"
            android:id="@+id/radioButton11"
            android:checked="false"
            android:clickable="true"
            android:layout_below="@+id/textView23"
            android:layout_alignRight="@+id/textView23"
            android:layout_alignEnd="@+id/textView23" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단기"
            android:id="@+id/radioButton12"
            android:checked="false"
            android:clickable="true"
            android:layout_alignTop="@+id/radioButton11"
            android:layout_toRightOf="@+id/radioButton11"
            android:layout_toEndOf="@+id/radioButton11"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp" />

        <CalendarView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/datePicker"
            android:layout_below="@+id/radioButton11"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:id="@+id/button8"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/radioButton12"
            android:layout_alignEnd="@+id/radioButton12"
            android:onClick="onButtonPreviousClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:id="@+id/button9"
            android:layout_alignTop="@+id/button8"
            android:layout_toRightOf="@+id/button8"
            android:layout_toEndOf="@+id/button8"
            android:onClick="onButtonNextClicked" />

    </RelativeLayout>
</LinearLayout>