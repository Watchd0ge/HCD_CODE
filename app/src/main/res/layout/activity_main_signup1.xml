<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hcd.hcdproject.MainActivity"
    android:background="#FFD8D9D9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="이용자 신규등록"
        android:id="@+id/textView"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_voucherID"
        android:layout_below="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:id="@+id/buttonEnter"
        android:nestedScrollingEnabled="true"
        android:onClick="onButtonEnterClicked"
        android:layout_alignBottom="@+id/editText_voucherID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="바우처 번호"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/crown"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/buttonEnter"
        android:layout_alignEnd="@+id/buttonEnter" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="등록"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonRegisterClicked" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myInfoLayout"
        android:src="@drawable/myinfopage1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_below="@+id/buttonEnter"
        android:layout_above="@+id/button10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="이름"
        android:id="@+id/text_name"
        android:layout_marginTop="77dp"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_alignTop="@+id/myInfoLayout"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="나이"
        android:id="@+id/text_age"
        android:layout_below="@+id/text_name"
        android:layout_alignLeft="@+id/text_name"
        android:layout_alignStart="@+id/text_name"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="성별"
        android:id="@+id/text_gender"
        android:layout_below="@+id/text_age"
        android:layout_alignLeft="@+id/text_age"
        android:layout_alignStart="@+id/text_age"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="장애 등급"
        android:id="@+id/text_disabilityGrade"
        android:layout_below="@+id/text_gender"
        android:layout_alignLeft="@+id/text_gender"
        android:layout_alignStart="@+id/text_gender"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="장애 유형"
        android:id="@+id/text_disabilityType"
        android:layout_below="@+id/text_disabilityGrade"
        android:layout_alignLeft="@+id/text_disabilityGrade"
        android:layout_alignStart="@+id/text_disabilityGrade"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="지역"
        android:id="@+id/text_region"
        android:layout_below="@+id/text_disabilityType"
        android:layout_alignLeft="@+id/text_disabilityType"
        android:layout_alignStart="@+id/text_disabilityType"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="name"
        android:id="@+id/name"
        android:layout_above="@+id/text_age"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="age"
        android:id="@+id/age"
        android:layout_alignBottom="@+id/text_age"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="gender"
        android:id="@+id/gender"
        android:layout_alignBottom="@+id/text_gender"
        android:layout_alignLeft="@+id/age"
        android:layout_alignStart="@+id/age" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="disabilityGrade"
        android:id="@+id/disabilityGrade"
        android:layout_alignBottom="@+id/text_disabilityGrade"
        android:layout_alignLeft="@+id/gender"
        android:layout_alignStart="@+id/gender" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="disabilityType"
        android:id="@+id/disabilityType"
        android:layout_alignBottom="@+id/text_disabilityType"
        android:layout_alignLeft="@+id/disabilityGrade"
        android:layout_alignStart="@+id/disabilityGrade" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="region"
        android:id="@+id/region"
        android:layout_alignBaseline="@+id/text_region"
        android:layout_alignBottom="@+id/text_region"
        android:layout_alignLeft="@+id/disabilityType"
        android:layout_alignStart="@+id/disabilityType" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/buttonGotoAddInfo"
        android:visibility="visible"
        android:onClick="onButtonGotoAddInfoClicked"
        android:background="#00000000"
        android:textColor="#00000000"
        android:layout_below="@+id/textView"
        android:layout_marginTop="250px"
        android:layout_alignRight="@+id/textView"
        android:layout_marginBottom="40dp" />

</RelativeLayout>
