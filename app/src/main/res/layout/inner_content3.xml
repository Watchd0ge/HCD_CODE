<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >


    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/choice_check"
        android:background="@drawable/ic_checkbox_marked_circle_outline_black_48dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/first_line">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/profile_picture"
                android:background="@drawable/physical_activity"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김이숙"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_alignParentLeft="true"
                    android:textSize="40dp" />
                <TextView
                    android:id="@+id/age_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="57 세"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_alignParentRight="true"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_line"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/experience"
                android:background="@drawable/years_ten"/>

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/activity"
                android:background="@drawable/night" />

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/week"
                android:background="@drawable/weekend"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
