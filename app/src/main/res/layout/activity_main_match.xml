<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hcd.hcdproject.MainActivity"
    android:background="#FFD8D9D9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="진행 상태"
        android:id="@+id/textView"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/crown"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignTop="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:src="@drawable/matched"
        android:layout_below="@+id/textView"
        android:paddingTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ButtonButtonB"
        android:id="@+id/buttonMoreInfo"
        android:layout_marginBottom="150px"
        android:layout_marginRight="70px"
        android:layout_marginEnd="41dp"
        android:textColor="#00000000"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView8"
        android:onClick="onButtonMoreInfoClicked" />

</RelativeLayout>
