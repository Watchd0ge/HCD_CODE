<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hcd.hcdproject.MainActivity"
    android:background="#FFD8D9D9">


     <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainimg02"
        android:layout_marginTop="0dp"
        android:src="@drawable/mainimg02"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="이용자"
        android:id="@+id/tvVoucher"
        android:layout_below="@+id/mainimg02"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:visibility="visible" />

     <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUserLogin"
        android:src="@drawable/login_red_new"
         android:onClick="onButtonUserLoginClicked"
         android:layout_below="@+id/tvVoucher"
         android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHelperLogin"
        android:src="@drawable/login_blue_new"
        android:onClick="onButtonHelperLoginClicked"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/buttonHelperSignup"
        android:layout_alignStart="@+id/buttonHelperSignup" />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="활동보조자"
        android:id="@+id/textView9"
        android:layout_below="@+id/buttonUserSignup"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUserSignup"
        android:src="@drawable/signup_red_new"
        android:onClick="onButtonUserSignupClicked"
        android:layout_below="@+id/tvVoucher"
        android:layout_marginTop="57dp"
        android:layout_alignLeft="@+id/buttonHelperLogin"
        android:layout_alignStart="@+id/buttonHelperLogin" />

     <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="57dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/signup_blue_new"
        android:onClick="onButtonHelperSignupClicked"
        android:id="@+id/buttonHelperSignup" />

</RelativeLayout>
