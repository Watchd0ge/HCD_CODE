<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hcd.hcdproject.MainActivity"
    android:background="#FFD8D9D9">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="활동보조자 선택"
        android:id="@+id/textView"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/crown"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignTop="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/servicepreference"
        android:layout_below="@+id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장기"
        android:id="@+id/longterm"
        android:checked="false"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="* 기간"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView3"
        android:layout_alignRight="@+id/longterm"
        android:layout_alignEnd="@+id/longterm"
        android:layout_marginTop="200px" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단기"
        android:id="@+id/shortterm"
        android:checked="false"
        android:layout_alignTop="@+id/longterm"
        android:layout_toRightOf="@+id/longterm"
        android:layout_toEndOf="@+id/longterm"
        android:layout_marginLeft="10dp"/>

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작 날짜"
        android:id="@+id/pickBeginDate"
        android:layout_alignTop="@+id/pickEndDate"
        android:layout_marginLeft="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종료 날짜"
        android:id="@+id/pickEndDate"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginRight="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="~"
        android:id="@+id/swungdash"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"
        android:id="@+id/buttonPrev"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toLeftOf="@+id/swungdash"
        android:layout_toStartOf="@+id/swungdash"
        android:onClick="onButtonPrevClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:id="@+id/buttonComplete"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/swungdash"
        android:layout_toEndOf="@+id/swungdash"
        android:onClick="onButtonCompleteClicked" />

</RelativeLayout>
