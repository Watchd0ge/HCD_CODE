<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hcd.hcdproject.MainActivity"
    android:background="#FFD8D9D9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="이용자 신규등록"
        android:id="@+id/textView"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_voucherID"
        android:layout_below="@+id/tvVoucher"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:id="@+id/buttonEnter"
        android:nestedScrollingEnabled="true"
        android:onClick="onButtonEnterClicked"
        android:layout_alignBottom="@+id/editText_voucherID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="바우처 번호"
        android:id="@+id/tvVoucher"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/crown"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/tvVoucher"
        android:layout_alignStart="@+id/tvVoucher"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/buttonEnter"
        android:layout_alignEnd="@+id/buttonEnter" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="등록"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonRegisterClicked" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/buttonGotoMyInfo"
        android:visibility="visible"
        android:onClick="onButtonGotoMyInfoClicked"
        android:background="#00000000"
        android:textColor="#00000000"
        android:layout_below="@+id/textView"
        android:layout_marginTop="250px"
        android:layout_alignRight="@+id/tvVoucher"
        android:layout_marginBottom="40dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myInfo_addLayout"
        android:src="@drawable/myinfopage_add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button10"
        android:layout_below="@+id/buttonEnter" />

    <EditText
        android:backgroundTint="#00000000"

        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/addInfo"
        android:layout_below="@+id/buttonGotoMyInfo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
