<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hcd.hcdproject.MainActivity"
    android:background="#FFD8D9D9">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="활동보조자 선택"
        android:id="@+id/textView"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/crown"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignTop="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/servicepreference"
        android:layout_below="@+id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오전"
        android:id="@+id/morning"
        android:checked="false"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="* 시간대"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView3"
        android:layout_alignRight="@+id/morning"
        android:layout_alignEnd="@+id/morning"
        android:layout_marginTop="200px" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후"
        android:id="@+id/afternoon"
        android:checked="false"
        android:layout_alignTop="@+id/morning"
        android:layout_toRightOf="@+id/morning"
        android:layout_toEndOf="@+id/morning"
        android:layout_marginLeft="10dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="심야"
        android:id="@+id/midnight"
        android:checked="false"
        android:layout_alignBottom="@+id/afternoon"
        android:layout_toRightOf="@+id/afternoon"
        android:layout_toEndOf="@+id/afternoon"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="* 요일"
        android:id="@+id/textView3"
        android:layout_below="@+id/morning"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평일"
        android:id="@+id/weekdays"
        android:checked="false"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/morning"
        android:layout_alignStart="@+id/morning" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주말"
        android:id="@+id/weekends"
        android:checked="false"
        android:layout_alignBottom="@+id/weekdays"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="* 분야"
        android:id="@+id/textView4"
        android:layout_below="@+id/weekdays"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사회"
        android:id="@+id/social"
        android:checked="false"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/weekdays"
        android:layout_alignStart="@+id/weekdays" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가사"
        android:id="@+id/households"
        android:checked="false"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신체"
        android:id="@+id/physical"
        android:checked="false"
        android:layout_alignTop="@+id/households"
        android:layout_toRightOf="@+id/households"
        android:layout_toEndOf="@+id/households"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="* 차량필요 여부"
        android:id="@+id/textView5"
        android:layout_below="@+id/social"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필요"
        android:id="@+id/needcar"
        android:checked="false"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/social"
        android:layout_alignStart="@+id/social" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="불필요"
        android:id="@+id/noneedcar"
        android:checked="false"
        android:layout_alignTop="@+id/needcar"
        android:layout_toRightOf="@+id/needcar"
        android:layout_toEndOf="@+id/needcar"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:id="@+id/buttonNext"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerInParent="true"
        android:onClick="onButtonNextClicked" />

</RelativeLayout>
